/* threads_demo.c */
#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

void* thread_func(void* arg){
    pthread_t self = pthread_self();
    printf("Thread started. ID: %lu\n", (unsigned long)self);
    sleep(1);
    // exit thread
    pthread_exit((void*) (size_t)42);
}

int main(){
    pthread_t t1, t2;
    pthread_create(&t1, NULL, thread_func, NULL);
    pthread_create(&t2, NULL, thread_func, NULL);

    // compare
    if(pthread_equal(t1, t2)) printf("Threads equal\n"); else printf("Threads different\n");

    void* retval;
    pthread_join(t1, &retval);
    printf("Thread 1 joined, return value=%ld\n", (long) (size_t) retval);
    pthread_join(t2, &retval);
    printf("Thread 2 joined, return value=%ld\n", (long) (size_t) retval);
    return 0;
}
